<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcomeimage"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:padding="15sp"
        android:text="Ewyre is the platform that helps Institutions students to get connect to their interested topics with their interested trainers through their Institutions."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/linearlayout"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/trainerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/welcomebutton"
            android:gravity="center_horizontal"
            android:drawableRight="@drawable/icon_trainers"
            android:paddingTop="15dp"
            android:text="Trainers    "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">

            <!--        <ImageView-->
            <!--            android:id="@+id/arrowIcon"-->
            <!--            android:layout_width="24dp"-->
            <!--            android:layout_height="24dp"-->
            <!--            android:src="@drawable/arrow_right_white"-->
            <!--            app:layout_constraintStart_toEndOf="@+id/appCompatButton"-->
            <!--            app:layout_constraintTop_toTopOf="parent"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"/>-->

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/institutionbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/welcomebutton"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:text="Institutions       "
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="20dp"
            android:drawableRight="@drawable/icon_institution"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">

            <!--        <ImageView-->
            <!--            android:id="@+id/arrowIcon"-->
            <!--            android:layout_width="24dp"-->
            <!--            android:layout_height="24dp"-->
            <!--            android:src="@drawable/arrow_right_white"-->
            <!--            app:layout_constraintStart_toEndOf="@+id/appCompatButton"-->
            <!--            app:layout_constraintTop_toTopOf="parent"-->
            <!--            app:layout_constraintBottom_toBottomOf="parent"/>-->

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</LinearLayout>